<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MidtermActivity">

    <EditText
        android:id="@+id/midtermpercentage"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:textSize="14sp"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/midtermscore"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/midterm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="Midterm"
        app:layout_constraintBaseline_toBaselineOf="@+id/midtermscore"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Project"
        android:layout_width="52dp"
        android:layout_height="19dp"
        android:layout_marginStart="36dp"
        android:text="Project"
        app:layout_constraintBaseline_toBaselineOf="@+id/projectscore"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="52dp"
        android:layout_height="23dp"
        android:layout_marginStart="36dp"
        android:text="Final"
        app:layout_constraintBaseline_toBaselineOf="@+id/finalscore"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/midtermscore"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/midtermpercentage"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/midterm"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/projectscore"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:textSize="14sp"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/projectpercentage"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Project"
        app:layout_constraintTop_toBottomOf="@+id/midtermscore" />

    <EditText
        android:id="@+id/finalscore"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:textSize="14sp"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/finalpercentage"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/projectscore" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:text="@string/lesson_scores_calculator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="84dp"
        android:text="Scores"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/finalpercentage"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:textSize="14sp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/finalscore"
        app:layout_constraintTop_toBottomOf="@+id/projectpercentage" />

    <EditText
        android:id="@+id/projectpercentage"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:textSize="14sp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/projectscore"
        app:layout_constraintTop_toBottomOf="@+id/midtermpercentage" />

    <TextView
        android:textSize="14sp"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="56dp"
        android:text="Percentages"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />



    <Button
        android:id="@+id/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/button"
        android:text="Button"
        app:layout_constraintTop_toBottomOf="@+id/finalscore"
        tools:layout_editor_absoluteX="0dp" />

    <ListView
        android:id="@+id/midtermList"
        android:layout_width="379dp"
        android:layout_height="285dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculate" />

</android.support.constraint.ConstraintLayout>